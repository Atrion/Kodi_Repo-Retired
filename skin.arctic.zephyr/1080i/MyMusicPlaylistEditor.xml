<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol allways="true">50</defaultcontrol>


    <controls>

        <include>GlobalBackground</include>
        <include>Furniture_Header</include>
        <include>Furniture_Clock</include>
        <include>Furniture_NowPlaying</include>
        <include>Furniture_Weather</include>

        <control type="label" id="12">
            <visible>false</visible>
        </control>

        <control type="label" id="101">
            <visible>false</visible>
        </control>

        <control type="group">
            <include>Animation.Common</include>
            <control type="group">
                <description>Left panel</description>
                <left>SidePad</left>
                <top>PosterPad</top>
                <height>640</height>
                <width>870</width>

                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture border="5" colordiffuse="Panel">common/box.png</texture>
                </control>

                <control type="label">
                    <description>Header Label</description>
                    <top>5</top>
                    <left>30</left>
                    <right>30</right>
                    <align>left</align>
                    <font>TinyBold</font>
                    <textcolor>PanelWhite70</textcolor>
                    <label>$LOCALIZE[2]$INFO[Control.GetLabel(12),  -  ,]</label>
                </control>

                <control type="list" id="50">
                    <description>Left File List</description>
                    <left>15</left>
                    <bottom>15</bottom>
                    <right>15</right>
                    <height>552</height>
                    <onleft>9000</onleft>
                    <onright>100</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>

                    <itemlayout height="69" width="840">



                        <control type="label">
                            <posx>30</posx>
                            <width>auto</width>
                            <align>left</align>
                            <textcolor>PanelWhite70</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width max="840">auto</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>PanelWhite70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>

                    </itemlayout>

                    <focusedlayout height="69" width="840">

                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                            <animation effect="fade" start="100" end="0" condition="!Control.HasFocus(50)">Conditional</animation>
                        </control>

                        <control type="label">
                            <posx>30</posx>
                            <width>auto</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width max="840">auto</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                        </control>

                    </focusedlayout>

                </control>

            </control>


            <control type="group">
                <description>Right panel</description>
                <right>SidePad</right>
                <top>PosterPad</top>
                <height>640</height>
                <width>870</width>
                <control type="image">
                    <width>100%</width>
                    <height>100%</height>
                    <texture border="5" colordiffuse="Panel">common/box.png</texture>
                </control>

                <control type="label">
                    <description>Header Label</description>
                    <top>5</top>
                    <left>30</left>
                    <right>30</right>
                    <align>left</align>
                    <font>TinyBold</font>
                    <textcolor>PanelWhite70</textcolor>
                    <label>$LOCALIZE[559]$INFO[Control.GetLabel(101),  -  ,]</label>
                </control>

                <control type="list" id="100">
                    <description>Left File List</description>
                    <left>15</left>
                    <bottom>15</bottom>
                    <right>15</right>
                    <height>552</height>
                    <onleft>50</onleft>
                    <onright>9000</onright>
                    <onup>100</onup>
                    <ondown>100</ondown>

                    <itemlayout height="69" width="840">



                        <control type="label">
                            <posx>30</posx>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>PanelWhite70</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width>150</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>PanelWhite70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>

                    </itemlayout>

                    <focusedlayout height="69" width="840">

                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/box.png</texture>
                            <animation effect="fade" start="100" end="0" condition="!Control.HasFocus(100)">Conditional</animation>
                        </control>

                        <control type="label">
                            <posx>30</posx>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>30</right>
                            <width>720</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                        </control>

                    </focusedlayout>

                </control>

            </control>


        </control>
        <control type="group">
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <visible>ControlGroup(9000).HasFocus()</visible>
            <include>GlobalOverlay</include>
        </control>
        <control type="group">
            <include>Def9000Background</include>
            <control type="grouplist" id="9000">
                <usecontrolcoords>true</usecontrolcoords>
                <include>Def9000GroupList</include>

                <control type="button" id="6">
                    <label>502</label>
                    <description>Open</description>
                    <include>DefContextButton</include>
                </control>
                <control type="button" id="7">
                    <label>190</label>
                    <description>Save</description>
                    <include>DefContextButton</include>
                </control>
                <control type="button" id="8">
                    <label>192</label>
                    <description>Clear</description>
                    <include>DefContextButton</include>
                </control>

            </control>
        </control>


    </controls>

</window>
