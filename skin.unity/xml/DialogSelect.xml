<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">3</defaultcontrol>
	<controls>
		<!--all content-->
		<control type="group">
			<centerleft>50%</centerleft>
			<width>1210</width>
			<visible>!Window.IsVisible(FileBrowser)</visible>
			<animation effect="slide" start="1925,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="-1925,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			<animation effect="slide" start="-1925,0" end="0,0" time="400" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="-1925,0" time="400" tween="quadratic" easing="out">Hidden</animation>
			<animation effect="slide" start="0,0" end="-35,0" time="300" condition="Window.IsActive(ShutdownMenu) + !String.IsEqual(Skin.AspectRatio,21:9)">Conditional</animation>
			<!--title bars and backgrounds-->
			<include content="DynamicDialogBackground">
				<param name="dialog-width" value="1210" />
				<param name="glow-width" value="1290" />
				<param name="subtitle-visible" value="true" />
				<param name="subtitle-height" value="55" />
			</include>
			<!--close window button-->
			<control type="button">
				<left>5</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<!--main content-->
			<control type="group">
				<!--title-->
				<control type="label" id="1">
					<left>45</left>
					<top>25</top>
					<width>1545</width>
					<height>60</height>
					<font>info.title</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
				</control>
				<!--file count (simple)-->
				<control type="label">
					<left>360</left>
					<top>110</top>
					<width>825</width>
					<height>52</height>
					<font>button</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>false</scroll>
					<textcolor>white</textcolor>
					<label>$INFO[Container(3).NumItems] $LOCALIZE[31025] ($LOCALIZE[31024] $INFO[Container(3).CurrentPage]/$INFO[Container(3).NumPages])</label>
					<visible>Control.IsVisible(3)</visible>
				</control>
				<!--file count (advanced)-->
				<control type="label">
					<left>360</left>
					<top>110</top>
					<width>825</width>
					<height>52</height>
					<font>button</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>false</scroll>
					<textcolor>white</textcolor>
					<label>$INFO[Container(6).NumItems] $LOCALIZE[31025] ($LOCALIZE[31024] $INFO[Container(6).CurrentPage]/$INFO[Container(6).NumPages])</label>
					<visible>Control.IsVisible(6)</visible>
				</control>
				<!--no settings-->
				<control type="label" id="4">
					<left>30</left>
					<top>270</top>
					<width>1155</width>
					<align>center</align>
				</control>
				<!--content list (simple)-->
				<control type="list" id="3">
					<left>30</left>
					<top>190</top>
					<bottom>86</bottom>
					<width>1155</width>
					<onup>3</onup>
					<ondown>3</ondown>
					<onleft>90</onleft>
					<onright>61</onright>
					<pagecontrol>61</pagecontrol>
					<scrolltime>200</scrolltime>
					<animation effect="slide" end="0,30" time="0" condition="!Control.IsVisible(5) + !Control.IsVisible(7)">Conditional</animation>
					<itemlayout height="67">
						<!--label-->
						<control type="label">
							<left>15</left>
							<top>0</top>
							<width>1125</width>
							<height>60</height>
							<font>label</font>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<info>ListItem.Label</info>
						</control>
					</itemlayout>
					<focusedlayout height="67">
						<!--background-->
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>1155</width>
							<height>60</height>
							<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
							<animation effect="fade" start="100" end="50" time="200" condition="!Control.HasFocus(3)">Conditional</animation>
						</control>
						<!--label-->
						<control type="label">
							<left>15</left>
							<top>0</top>
							<width>1125</width>
							<height>60</height>
							<font>label</font>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>white</textcolor>
							<selectedcolor>$VAR[Colour.Alt]</selectedcolor>
							<info>ListItem.Label</info>
						</control>
					</focusedlayout>
				</control>
				<!--content list (advanced)-->
				<control type="list" id="6">
					<left>30</left>
					<top>190</top>
					<bottom>80</bottom>
					<width>1155</width>
					<onup>6</onup>
					<ondown>6</ondown>
					<onleft>90</onleft>
					<onright>61</onright>
					<pagecontrol>61</pagecontrol>
					<scrolltime>200</scrolltime>
					<animation effect="slide" end="0,30" time="0" condition="!Control.IsVisible(5) + !Control.IsVisible(7)">Conditional</animation>
					<itemlayout height="135">
						<!--icon-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>115</width>
							<height>115</height>
							<texture>$INFO[Listitem.Icon]</texture>
							<visible>!String.Contains(ListItem.Icon,Default)</visible>
						</control>
						<!--default icon-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>115</width>
							<height>115</height>
							<texture colordiffuse="text.primary">$INFO[Listitem.Icon]</texture>
							<visible>String.Contains(ListItem.Icon,Default)</visible>
						</control>
						<!--title-->
						<control type="label">
							<left>133</left>
							<top>7</top>
							<width>1125</width>
							<height>60</height>
							<font>label</font>
							<align>left</align>
							<aligny>top</aligny>
							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<label>[B]$INFO[ListItem.Label][/B]</label>
						</control>
						<!--description-->
						<control type="textbox">
							<left>133</left>
							<top>42</top>
							<width>1125</width>
							<height>73</height>
							<font>label</font>
							<align>left</align>
							<aligny>top</aligny>
							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</itemlayout>
					<focusedlayout height="135">
						<!--background-->
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>1155</width>
							<height>125</height>
							<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
							<animation effect="fade" start="100" end="50" time="200" condition="!Control.HasFocus(6)">Conditional</animation>
						</control>
						<!--icon-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>115</width>
							<height>115</height>
							<texture>$INFO[Listitem.Icon]</texture>
						</control>
						<!--title-->
						<control type="label">
							<left>133</left>
							<top>7</top>
							<width>1125</width>
							<height>60</height>
							<font>label</font>
							<align>left</align>
							<aligny>top</aligny>
							<textcolor>white</textcolor>
							<selectedcolor>$VAR[Colour.Alt]</selectedcolor>
							<label>[B]$INFO[ListItem.Label][/B]</label>
						</control>
						<!--description-->
						<control type="textbox">
							<left>133</left>
							<top>42</top>
							<width>1125</width>
							<height>73</height>
							<font>label</font>
							<align>left</align>
							<aligny>top</aligny>
							<textcolor>white</textcolor>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="61">
					<left>1195</left>
					<top>190</top>
					<bottom>93</bottom>
					<orientation>vertical</orientation>
					<showonepage>false</showonepage>
					<texturesliderbackground colordiffuse="scroll.secondary">backgrounds/white.png</texturesliderbackground>
					<texturesliderbar colordiffuse="secondary">backgrounds/white.png</texturesliderbar>
					<onleft>3</onleft>
					<onright>3</onright>
					<ondown>61</ondown>
					<onup>61</onup>
					<animation effect="slide" end="0,30" time="0" condition="!Control.IsVisible(5) + !Control.IsVisible(7)">Conditional</animation>
					<visible>Control.IsVisible(3)</visible>
				</control>
				<control type="scrollbar" id="61">
					<left>1195</left>
					<top>190</top>
					<bottom>90</bottom>
					<orientation>vertical</orientation>
					<showonepage>false</showonepage>
					<texturesliderbackground colordiffuse="scroll.secondary">backgrounds/white.png</texturesliderbackground>
					<texturesliderbar colordiffuse="secondary">backgrounds/white.png</texturesliderbar>
					<onleft>6</onleft>
					<onright>6</onright>
					<ondown>61</ondown>
					<onup>61</onup>
					<animation effect="slide" end="0,30" time="0" condition="!Control.IsVisible(5) + !Control.IsVisible(7)">Conditional</animation>
					<visible>Control.IsVisible(6)</visible>
				</control>
			</control>
			<!--buttons bar-->
			<control type="group">
				<visible>Control.IsVisible(5) | Control.IsVisible(7)</visible>
				<!--buttons bg-->
				<control type="image">
					<centerleft>50%</centerleft>
					<top>65r</top>
					<width>1210</width>
					<height>70</height>
					<texture colordiffuse="primary">backgrounds/white.png</texture>
				</control>
				<!--buttons shadow-->
				<control type="image">
					<centerleft>50%</centerleft>
					<top>65r</top>
					<width>1210</width>
					<height>10</height>
					<texture>homeshadow.png</texture>
					<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
				</control>
				<!--bottom buttons-->
				<control type="grouplist" id="90">
					<centerleft>50%</centerleft>
					<top>65r</top>
					<width>600</width>
					<height>60</height>
					<orientation>horizontal</orientation>
					<align>justify</align>
					<onleft>3</onleft>
					<onright>3</onright>
					<!--add button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="5" />
						<param name="button-width" value="140" />
						<param name="button-texture" value="addbutton" />
						<param name="button-onup" value="3" />
						<param name="button-ondown" value="3" />
						<param name="button-onleft" value="7" />
						<param name="button-onright" value="7" />
					</include>
					<!--no button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="7" />
						<param name="button-width" value="140" />
						<param name="button-texture" value="nobutton" />
						<param name="button-onup" value="3" />
						<param name="button-ondown" value="3" />
						<param name="button-onleft" value="5" />
						<param name="button-onright" value="5" />
					</include>
				</control>
			</control>
		</control>
	</controls>
</window>