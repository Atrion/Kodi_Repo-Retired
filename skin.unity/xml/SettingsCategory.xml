<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>3</defaultcontrol>
	<onload condition="String.IsEmpty(Skin.String(Colour.Theme))">Skin.SetString(Colour.Theme,Red)</onload>
	<controls>
		<include>CommonBackground</include>
		<include>Clock</include>
		<include>CommonNowPlaying</include>
		<!--breadcrumbs-->
		<include content="DynamicLeftBreadcrumb">
			<param name="breadcrumb1-label" value="$LOCALIZE[5]" />
			<param name="breadcrumb2-label" value="[LOWERCASE]$INFO[Control.GetLabel(2)][/LOWERCASE]" />
			<param name="breadcrumb2-visible" value="true" />
		</include>
		<!--main content-->
		<control type="group">
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>1390</width>
			<height>783</height>
			<visible>![Window.IsActive(PVRChannelManager) | Window.IsActive(PVRGroupManager) | Window.IsActive(AudioDSPManager) | Window.IsActive(script-RSS_Editor.xml)]</visible>
			<animation effect="slide" start="0,1512" end="0,0" time="400" tween="quadratic" easing="out" condition="!Window.Previous(Settings.xml)">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,1512" time="400" tween="quadratic" easing="out" condition="!Window.Next(Settings.xml)">WindowClose</animation>
			<animation effect="slide" start="2015,0" end="0,0" time="400" tween="quadratic" easing="out" condition="Window.Previous(Settings.xml)">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="2015,0" time="400" tween="quadratic" easing="out" condition="Window.Next(Settings.xml) | Window.Next(SkinSettings.xml)">WindowClose</animation>
			<animation effect="slide" start="-2015,0" end="0,0" time="400" tween="quadratic" easing="out">Visible</animation>
			<animation effect="slide" start="0,0" end="-2015,0" time="400" tween="quadratic" easing="out">Hidden</animation>
			<!--title bars and backgrounds-->
			<include content="DynamicDialogBackground">
				<param name="dialog-width" value="1390" />
				<param name="dialog-height" value="783" />
				<param name="glow-width" value="1470" />
				<param name="glow-height" value="863" />
				<param name="sidebar-visible" value="true" />
			</include>
			<!--close window button-->
			<control type="button">
				<left>5</left>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<!--title-->
			<control type="label">
				<left>45</left>
				<top>25</top>
				<width>1545</width>
				<height>60</height>
				<font>info.title</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<label>$INFO[Control.GetLabel(2)] - $LOCALIZE[5]</label>
			</control>
			<!--left buttons-->
			<control type="grouplist" id="3">
				<left>10</left>
				<top>120</top>
				<width>390</width>
				<height>645</height>
				<itemgap>5</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>20</ondown>
			</control>
			<!--settings level-->
			<control type="button" id="20">
				<left>10</left>
				<top>711</top>
				<height>60</height>
				<texturefocus colordiffuse="white">backgrounds/white.png</texturefocus>
				<textcolor>white</textcolor>
				<focusedcolor>$VAR[Colour.900]</focusedcolor>
				<align>right</align>
				<include>ButtonCommonValues</include>
				<label>10037</label>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<onclick>SettingsLevelChange</onclick>
			</control>
			<!--settings level label (no focus)-->
			<control type="label">
				<left>25</left>
				<top>711</top>
				<height>60</height>
				<width>305</width>
				<label>31142</label>
				<font>button</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<visible>!Control.HasFocus(20)</visible>
			</control>
			<!--settings level label (focus)-->
			<control type="label">
				<left>25</left>
				<top>711</top>
				<height>60</height>
				<width>305</width>
				<label>31142</label>
				<font>button</font>
				<textcolor>$VAR[Colour.900]</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<visible>Control.HasFocus(20)</visible>
			</control>
			<!--controls-->
			<control type="grouplist" id="5">
				<left>385</left>
				<top>120</top>
				<width>995</width>
				<height>590</height>
				<itemgap>5</itemgap>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
			</control>
			<!--scrollbar-->
			<control type="scrollbar" id="60">
				<left>1400</left>
				<top>110</top>
				<height>673</height>
				<onleft>5</onleft>
				<onright>3</onright>
			</control>
			<!--seperator-->
			<control type="image">
				<left>395</left>
				<top>715</top>
				<width>975</width>
				<height>1</height>
				<aspectratio>stretch</aspectratio>
				<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
			<!--setting description-->
			<control type="textbox" id="6">
				<left>400</left>
				<top>722</top>
				<width>960</width>
				<height>46</height>
				<font>secondary.info.small</font>
				<align>left</align>
				<textcolor>text.primary</textcolor>
			</control>
		</control>
		<include>BehindDialogFadeOut</include>
		<!--category buttons-->
		<control type="button" id="10">
			<texturefocus colordiffuse="white">backgrounds/white.png</texturefocus>
			<textcolor>white</textcolor>
			<focusedcolor>$VAR[Colour.900]</focusedcolor>
			<include>ButtonCommonValues</include>
		</control>
		<!--button-->
		<control type="button" id="7">
			<left>0</left>
			<top>0</top>
			<invalidcolor>invalid</invalidcolor>
		</control>
		<!--radio button-->
		<control type="radiobutton" id="8">
			<left>0</left>
			<top>0</top>
		</control>
		<!--spin control-->
		<control type="spincontrolex" id="9">
			<left>0</left>
			<top>0</top>
			<reverse>yes</reverse>
		</control>
		<!--slider control-->
		<control type="sliderex" id="13">
			<left>0</left>
			<top>0</top>
		</control>
		<control type="image" id="11">
			<left>0</left>
			<top>0</top>
			<height>1</height>
			<aspectratio>stretch</aspectratio>
			<texture colordiffuse="disabled">backgrounds/white.png</texture>
		</control>
		<!--label-->
		<control type="label" id="14">
			<left>0</left>
			<top>0</top>
			<height>60</height>
			<font>button.bold</font>
			<textcolor>$VAR[Colour.500]</textcolor>
			<textoffsetx>5</textoffsetx>
			<aligny>center</aligny>
		</control>
		<control type="label" id="2">
			<description>Fake Label so we can pass it value down to the one below</description>
			<left>0</left>
			<top>0</top>
			<width>0</width>
			<height>0</height>
			<font>-</font>
			<visible>false</visible>
		</control>
	</controls>
</window>