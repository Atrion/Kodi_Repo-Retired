<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="group" id="1">
			<visible>[Player.ShowInfo | Window.IsActive(VideoOSD) | Window.IsVisible(DialogSeekbar.xml)] + ![Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(OSDAudioDSPSettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(SliderDialog)]</visible>
			<control type="group">
				<visible>VideoPlayer.Content(LiveTV)</visible>
				<!--breadcrumbs-->
				<include content="DynamicLeftBreadcrumb">
					<param name="breadcrumb1-label" value="$INFO[VideoPlayer.ChannelNumberLabel]. $INFO[VideoPlayer.ChannelName]" />
				</include>
				<include content="DynamicLeftBreadcrumb">
					<param name="breadcrumb-top" value="110" />
					<param name="breadcrumb-height" value="34" />
					<param name="breadcrumb-font" value="breadcrumb.secondary" />
					<param name="breadcrumb1-label" value="$LOCALIZE[31509]:" />
					<param name="breadcrumb2-label" value="$INFO[VideoPlayer.ChannelGroup]" />
					<param name="breadcrumb2-visible" value="true" />
				</include>
			</control>
			<!--time-->
			<control type="group" id="1">
				<animation effect="slide" start="0,0" end="-51,0" time="100" condition="Player.Muted">conditional</animation>
				<include content="DynamicRightBreadcrumb">
					<param name="breadcrumb1-label" value="$INFO[System.Time(hh:mm)]$INFO[System.Time(xx), ,]" />
				</include>
			</control>
			<include content="DynamicRightBreadcrumb">
				<param name="breadcrumb-top" value="110" />
				<param name="breadcrumb-height" value="34" />
				<param name="breadcrumb-font" value="breadcrumb.secondary" />
				<param name="breadcrumb1-label" value="$INFO[Player.FinishTime]" />
				<param name="breadcrumb2-label" value="$LOCALIZE[31049]:" />
				<param name="breadcrumb2-visible" value="true" />
			</include>
			<!--bottom info-->
			<control type="group" id="1">
				<centerleft>50%</centerleft>
				<top>383r</top>
				<width>1140</width>
				<animation effect="slide" start="0,0" end="0,100" time="200" condition="[!VideoPlayer.Content(Files) + String.IsEmpty(VideoPlayer.Plot)] | !Player.ShowInfo">Conditional</animation>
				<animation effect="slide" start="0,0" end="-372,0" time="200" delay="100" condition="Skin.HasSetting(SubtitleSection)">Conditional</animation>
				<!--background-->
				<control type="image" id="1">
					<width>1140</width>
					<height>190</height>
					<texture colordiffuse="tertiary">backgrounds/np info bg.png</texture>
					<animation effect="zoom" start="0,0,1140,190" end="0,0,1140,290" center="0,-5" time="200" condition="[VideoPlayer.Content(Files) | !String.IsEmpty(VideoPlayer.Plot)] + Player.ShowInfo">Conditional</animation>
				</control>
				<!--title bg-->
				<control type="image" id="1">
					<left>10</left>
					<top>6</top>
					<width>1120</width>
					<height>70</height>
					<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
				</control>
				<!--title shadow-->
				<control type="image" id="1">
					<left>10</left>
					<top>76</top>
					<width>1120</width>
					<height>10</height>
					<texture>homeshadow.png</texture>
					<animation effect="fade" start="100" end="75" time="0" condition="true">Conditional</animation>
				</control>
				<!--info-->
				<control type="group" id="1">
					<top>6</top>
					<!--title-->
					<control type="label" id="1">
						<!--1-->
						<left>25</left>
						<top>3</top>
						<width>800</width>
						<height>60</height>
						<font>menu.title</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[Player.Title]</label>
						<scroll>true</scroll>
					</control>
					<!--tagline-->
					<control type="label" id="1">
						<left>25</left>
						<top>75</top>
						<width>600</width>
						<height>38</height>
						<align>left</align>
						<font>font12</font>
						<textcolor>$VAR[Colour.500]</textcolor>
						<label>$VAR[Tagline]</label>
						<visible>VideoPlayer.Content(Movies)</visible>
					</control>
					<!--video language and recording flags-->
					<control type="group" id="1">
						<left>655</left>
						<top>80</top>
						<include>video.flags.info</include>
					</control>
					<!--path-->
					<control type="label" id="1">
						<left>25</left>
						<top>110</top>
						<width>1090</width>
						<height>108</height>
						<align>left</align>
						<font>label</font>
						<textcolor>text.primary</textcolor>
						<label>$INFO[Player.FileNameAndPath]</label>
						<wrapmultiline>true</wrapmultiline>
						<visible>VideoPlayer.Content(Files) + Player.ShowInfo</visible>
					</control>
					<!--plot-->
					<control type="textbox" id="1">
						<left>25</left>
						<top>110</top>
						<width>1090</width>
						<height>108</height>
						<font>label</font>
						<align>left</align>
						<textcolor>text.primary</textcolor>
						<label>$INFO[VideoPlayer.Plot]</label>
						<autoscroll time="1500" delay="15000" repeat="10000">Skin.HasSetting(AutoScroll)</autoscroll>
						<visible>Player.ShowInfo</visible>
						<animation effect="fade" start="0" end="100" time="100" delay="200">Visible</animation>
					</control>
				</control>
				<!--progress-->
				<control type="group" id="1">
					<top>250r</top>
					<visible>!VideoPlayer.Content(LiveTV) | [VideoPlayer.Content(LiveTV) + VideoPlayer.HasEpg]</visible>
					<animation effect="slide" start="0,0" end="0,100" time="200" condition="[VideoPlayer.Content(Files) | !String.IsEmpty(VideoPlayer.Plot)] + Player.ShowInfo">Conditional</animation>
					<!--cache-->
					<control type="progress" id="1">
						<left>25</left>
						<top>0</top>
						<width>1090</width>
						<height>8</height>
						<info>Player.ProgressCache</info>
						<midtexture colordiffuse="$VAR[Colour.900]">backgrounds/white.png</midtexture>
					</control>
					<!--progress-->
					<control type="progress" id="1">
						<left>25</left>
						<top>0</top>
						<width>1090</width>
						<height>7</height>
						<info>Player.Progress</info>
						<texturebg>-</texturebg>
					</control>
					<!--current time-->
					<control type="label" id="1">
						<left>25</left>
						<top>-8</top>
						<width>150</width>
						<height>60</height>
						<font>breadcrumb.secondary</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Time(hh:mm:ss)]</label>
					</control>
					<!--chapter-->
					<control type="label" id="1">
						<visible>!VideoPlayer.Content(LiveTV)</visible>
						<left>25</left>
						<top>-8</top>
						<width>1080</width>
						<height>60</height>
						<font>breadcrumb.secondary</font>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[player.chapter,$LOCALIZE[21396]  ]$INFO[player.chaptercount, / ]</label>
						<visible>!Window.IsVisible(DialogSeekbar.xml)</visible>
					</control>
					<!--end time-->
					<control type="label" id="1">
						<left>965</left>
						<top>-8</top>
						<width>150</width>
						<height>60</height>
						<font>breadcrumb.secondary</font>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[Player.Duration(hh:mm:ss)]</label>
					</control>
				</control>
			</control>
		</control>
		<!-- codec info -->
		<control type="group" id="0">
			<left>0</left>
			<top>30</top>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image">
				<description>media info background image</description>
				<left>0</left>
				<top>0</top>
				<width>100%</width>
				<height>210</height>
				<texture>black-back.png</texture>
			</control>
			<control type="label" id="10">
				<description>row 1 label</description>
				<left>75</left>
				<top>15</top>
				<width>1770</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<label>-</label>
			</control>
			<control type="label" id="11">
				<description>row 2 label</description>
				<left>75</left>
				<top>82</top>
				<width>1770</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<label>-</label>
			</control>
			<control type="label" id="12">
				<description>row 3 label</description>
				<left>75</left>
				<top>150</top>
				<width>1770</width>
				<height>45</height>
				<align>left</align>
				<aligny>center</aligny>
				<label>-</label>
			</control>
		</control>
	</controls>
</window>