<?xml version="1.0" encoding="UTF-8"?>
<window>
	<controls>
		<!--all content-->
		<control type="group">
			<left>0r</left>
			<width>800</width>
			<visible>![Window.IsActive(ShutdownMenu) | Window.IsActive(ContextMenu)]</visible>
			<include content="SideBladeRight">
				<param name="dialog-glowwidth" value="800" />
				<param name="subtitle-visible" value="true" />
				<param name="background-fade" value="true" />
			</include>
			<!--main content-->
			<control type="group">
				<!--title-->
				<control type="label">
					<left>45</left>
					<top>15</top>
					<width>740</width>
					<height>60</height>
					<font>menu.title</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$ADDON[script.cu.lrclyrics 32199]</label>
				</control>
				<!--secondary title-->
				<control type="label">
					<left>45</left>
					<top>90</top>
					<width>740</width>
					<height>50</height>
					<font>kai.secondary</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title]</label>
				</control>
				<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
				<control type="list" id="110">
					<left>45</left>
					<top>155</top>
					<bottom>127</bottom>
					<width>740</width>
					<onleft>111</onleft>
					<onright>111</onright>
					<onup>110</onup>
					<ondown>110</ondown>
					<pagecontrol>111</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="38">
						<control type="label">
							<left>0</left>
							<top>0</top>
							<width>740</width>
							<height>38</height>
							<font>kai.primary</font>
							<aligny>center</aligny>
							<align>center</align>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<info>ListItem.Label</info>
						</control>
					</itemlayout>
					<focusedlayout height="38">
						<control type="label">
							<left>0</left>
							<top>0</top>
							<width>740</width>
							<height>38</height>
							<font>kai.primary</font>
							<aligny>center</aligny>
							<align>center</align>
							<shadowcolor>black</shadowcolor>
							<textcolor>$VAR[Colour.500]</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<label>$INFO[ListItem.Label]</label>
							<visible>!Control.HasFocus(110)</visible>
						</control>
						<control type="label">
							<left>0</left>
							<top>0</top>
							<width>740</width>
							<height>38</height>
							<font>kai.primary</font>
							<aligny>center</aligny>
							<align>center</align>
							<shadowcolor>black</shadowcolor>
							<textcolor>$VAR[Colour.500]</textcolor>
							<label fallback="--">$INFO[ListItem.Label]</label>
							<visible>Control.HasFocus(110)</visible>
						</control>
					</focusedlayout>
				</control>
				<control type="spincontrol" id="111">
					<description>Next page button</description>
					<left>100r</left>
					<top>105r</top>
					<subtype>page</subtype>
					<onleft>110</onleft>
					<onright>110</onright>
					<ondown>110</ondown>
					<onup>110</onup>
					<textcolor>$VAR[Colour.500]</textcolor>
					<focusedcolor>$VAR[Colour.500]</focusedcolor>
					<textureupfocus colordiffuse="$VAR[Colour.500]">scroll-up-2.png</textureupfocus>
					<texturedownfocus colordiffuse="$VAR[Colour.500]">scroll-down-2.png</texturedownfocus>
					<showonepage>true</showonepage>
					<visible>Control.IsVisible(110)</visible>
				</control>
				<control type="label" id="2">
					<description>Pick label</description>
					<left>45</left>
					<top>195</top>
					<width>740</width>
					<height>45</height>
					<font>secondary.info</font>
					<align>center</align>
					<aligny>center</aligny>
					<label>31203</label>
					<textcolor>$VAR[Colour.500]</textcolor>
					<visible>Control.IsVisible(120) + !Control.IsVisible(110)</visible>
				</control>
				<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
				<control type="list" id="120">
					<left>45</left>
					<top>255</top>
					<bottom>165</bottom>
					<width>740</width>
					<onleft>121</onleft>
					<onright>121</onright>
					<onup>120</onup>
					<ondown>120</ondown>
					<pagecontrol>121</pagecontrol>
					<scrolltime>200</scrolltime>
					<animation effect="slide" start="0,0" end="30,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
					<itemlayout height="60">
						<control type="label">
							<left>15</left>
							<top>0</top>
							<width>710</width>
							<height>60</height>
							<align>left</align>
							<aligny>center</aligny>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<info>ListItem.Label</info>
						</control>
					</itemlayout>
					<focusedlayout height="60">
						<!--bg-->
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>740</width>
							<height>60</height>
							<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
							<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(120)">Conditional</animation>
						</control>
						<control type="label">
							<left>15</left>
							<top>0</top>
							<width>710</width>
							<height>60</height>
							<align>left</align>
							<aligny>center</aligny>
							<textcolor>white</textcolor>
							<selectedcolor>white</selectedcolor>
							<info>ListItem.Label</info>
						</control>
					</focusedlayout>
				</control>
				<control type="spincontrol" id="121">
					<description>Next page button</description>
					<left>100r</left>
					<top>105r</top>
					<subtype>page</subtype>
					<onleft>120</onleft>
					<onright>120</onright>
					<ondown>120</ondown>
					<onup>120</onup>
					<textcolor>$VAR[Colour.500]</textcolor>
					<focusedcolor>$VAR[Colour.500]</focusedcolor>
					<textureupfocus colordiffuse="$VAR[Colour.500]">scroll-up-2.png</textureupfocus>
					<texturedownfocus colordiffuse="$VAR[Colour.500]">scroll-down-2.png</texturedownfocus>
					<showonepage>true</showonepage>
					<visible>Control.IsVisible(120)</visible>
				</control>
				<control type="label">
					<description>Scraper label</description>
					<left>45</left>
					<top>60r</top>
					<width>740</width>
					<height>45</height>
					<label>$LOCALIZE[31205] - $INFO[Control.GetLabel(200)]</label>
					<font>kai.primary</font>
					<align>center</align>
					<aligny>center</aligny>
				</control>
				<control type="label" id="200">
					<description>Scraper label</description>
					<visible>false</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
