<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1</defaultcontrol>
	<controls>
		<!--all content-->
		<control type="grouplist" id="1">
			<right>60</right>
			<top>60</top>
			<width>654</width>
			<height>100</height>
			<align>right</align>
			<orientation>horizontal</orientation>
			<itemgap>5</itemgap>
			<animation effect="slide" start="0,0" end="-50,0" time="100" condition="Player.Muted">conditional</animation>
			<control type="group">
				<width>350</width>
				<height>45</height>
				<animation effect="fade" start="100" end="0" time="200" delay="1000" condition="Player.Muted">Conditional</animation>
				<!--glow-->
				<control type="image">
					<left>-10</left>
					<top>-10</top>
					<width>370</width>
					<height>65</height>
					<texture colordiffuse="tertiary">backgrounds/volume.png</texture>
				</control>
				<!--background-->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>350</width>
					<height>45</height>
					<texture colordiffuse="tertiary">backgrounds/white.png</texture>
				</control>
				<!--normal audio-->
				<control type="group">
					<visible>!player.passthrough</visible>
					<!--volume icon-->
					<control type="image">
						<left>304</left>
						<top>0</top>
						<width>45</width>
						<height>45</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="text.primary">VolumeIcon.png</texture>
					</control>
					<!--volume bar-->
					<control type="progress" id="1">
						<left>10</left>
						<top>19</top>
						<width>290</width>
						<height>7</height>
						<info>Player.Volume</info>
					</control>
				</control>
				<!--passthrough audio-->
				<control type="group">
					<visible>player.passthrough</visible>
					<!--volume icon-->
					<control type="image">
						<left>304</left>
						<top>0</top>
						<width>45</width>
						<height>45</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="text.primary">VolumeIcon.png</texture>
					</control>
					<control type="label">
						<description>Passthrough Label</description>
						<left>-45</left>
						<top>-1</top>
						<width>345</width>
						<height>45</height>
						<label>$LOCALIZE[29802]</label>
						<font>kai.secondary</font>
						<textcolor>text.primary</textcolor>
						<align>right</align>
						<aligny>center</aligny>
					</control>
				</control>
			</control>
			<control type="label">
				<visible>![Window.IsActive(visualisation) | Window.IsActive(fullscreenvideo)]</visible>
				<width>99</width>
				<height>45</height>
				<font>-</font>
			</control>
			<control type="label">
				<visible>Window.IsActive(visualisation) | Window.IsActive(fullscreenvideo)</visible>
				<width>1</width>
				<height>45</height>
				<font>-</font>
			</control>
			<control type="button">
				<width max="500">auto</width>
				<height>45</height>
				<font>breadcrumb</font>
				<textoffsetx>10</textoffsetx>
				<label>$INFO[System.Time(hh:mm)]$INFO[System.Time(xx), ,]</label>
				<enable>false</enable>
				<disabledcolor>00FFFFFF</disabledcolor>
			</control>
		</control>
		<control type="group">
			<left>105r</left>
			<top>60</top>
			<animation effect="fade" time="400">WindowOpen</animation>
			<animation effect="fade" time="400">Visible</animation>
			<visible>Player.Muted</visible>
			<!--glow-->
			<control type="image" id="122">
				<left>-10</left>
				<top>-10</top>
				<width>65</width>
				<height>65</height>
				<texture colordiffuse="$VAR[Colour.500]">backgrounds/mute.png</texture>
			</control>
			<!--background-->
			<control type="image" id="122">
				<left>0</left>
				<top>0</top>
				<width>45</width>
				<height>45</height>
				<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
			</control>
			<!--mute icon-->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>45</width>
				<height>45</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="white">icon-mute.png</texture>
			</control>
		</control>
	</controls>
</window>