<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<controls>
		<!--all content-->
		<control type="group">
			<left>0r</left>
			<width>470</width>
			<visible>!Window.IsActive(FileBrowser) + !Window.IsActive(ShutdownMenu)</visible>
			<include content="SideBladeRight">
				<param name="dialog-glowwidth" value="470" />
				<param name="background-fade" value="true" />
			</include>
			<!--close window button-->
			<control type="button">
				<left>35</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<!--main content-->
			<control type="group">
				<!--title-->
				<control type="label">
					<left>45</left>
					<top>15</top>
					<width>410</width>
					<height>60</height>
					<font>menu.title</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>white</textcolor>
					<label>$LOCALIZE[298]</label>
				</control>
				<!--file count-->
				<control type="label">
					<left>45</left>
					<top>205r</top>
					<width>410</width>
					<height>60</height>
					<font>breadcrumb.secondary</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<textcolor>$VAR[Colour.500]</textcolor>
					<label>$INFO[Container(11).NumItems] $LOCALIZE[31025] ($LOCALIZE[31024] $INFO[Container(11).CurrentPage]/$INFO[Container(11).NumPages])</label>
				</control>
				<!--bookmarks-->
				<control type="list" id="11">
					<left>45</left>
					<top>105</top>
					<bottom>195</bottom>
					<width>410</width>
					<onleft>11</onleft>
					<onright>11</onright>
					<ondown>9000</ondown>
					<onup>9000</onup>
					<scrolltime>200</scrolltime>
					<viewtype label="536">icon</viewtype>
					<pagecontrol>-</pagecontrol>
					<orientation>vertical</orientation>
					<itemlayout height="260" width="410">
						<!--thumb-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>400</width>
							<height>250</height>
							<aspectratio>scale</aspectratio>
							<info>ListItem.Icon</info>
						</control>
					</itemlayout>
					<focusedlayout height="260" width="410">
						<!--thumb (no focus)-->
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>400</width>
							<height>250</height>
							<aspectratio>scale</aspectratio>
							<info>ListItem.Icon</info>
							<visible>!Control.HasFocus(11)</visible>
						</control>
						<!--thumb (focus)-->
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>410</width>
							<height>260</height>
							<aspectratio>scale</aspectratio>
							<info>ListItem.Icon</info>
							<bordersize>5</bordersize>
							<bordertexture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</bordertexture>
							<visible>Control.HasFocus(11)</visible>
						</control>
						<!--info background-->
						<control type="image">
							<left>5</left>
							<top>205</top>
							<width>275</width>
							<height>50</height>
							<texture colordiffuse="tertiary">backgrounds/white.png</texture>
						</control>
						<!--main label-->
						<control type="label">
							<left>15</left>
							<top>208</top>
							<width>250</width>
							<height>60</height>
							<font>breadcrumb</font>
							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<align>left</align>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
						</control>
					</focusedlayout>
				</control>
				<!--controls-->
				<control type="grouplist" id="9000">
					<left>45</left>
					<top>150r</top>
					<width>360</width>
					<height>160</height>
					<itemgap>0</itemgap>
					<onleft>9000</onleft>
					<onright>9000</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<!--create bookmark button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="2" />
						<param name="button-width" value="240" />
						<param name="button-texture" value="addbutton" />
						<param name="button-label" value="294" />
						<param name="button-onup" value="11" />
						<param name="button-ondown" value="3" />
					</include>
					<!--clear bookmark button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="3" />
						<param name="button-width" value="240" />
						<param name="button-texture" value="nobutton" />
						<param name="button-label" value="296" />
						<param name="button-onup" value="2" />
						<param name="button-ondown" value="4" />
					</include>
					<!--set episode bookmark button-->
					<include content="AnimatedCircleButtonGroup">
						<param name="button-id" value="4" />
						<param name="button-width" value="240" />
						<param name="button-visible" value="videoplayer.content(episodes)" />
						<param name="button-texture" value="addbutton" />
						<param name="button-label" value="20406" />
						<param name="button-onup" value="3" />
						<param name="button-ondown" value="11" />
					</include>
				</control>
			</control>
		</control>
	</controls>
</window>