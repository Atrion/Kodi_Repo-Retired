	<include name="video.flags.info">
		<control type="grouplist" id="1">
			<width>460</width>
			<height>52</height>
			<itemgap>0</itemgap>
			<align>right</align>
			<orientation>horizontal</orientation>
			<visible>!Player.ChannelPreviewActive</visible>
			<!--video resolution-->
			<control type="group" id="1">
				<width>57</width>
				<height>27</height>
				<control type="image" id="1">
					<width>57</width>
					<height>27</height>
					<texture>flags/base 3.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>3</left>
					<top>3</top>
					<width>49</width>
					<height>20</height>
					<texture fallback="flags/resolution/defaultscreen.png">$INFO[VideoPlayer.VideoResolution,flags/resolution/,.png]</texture>
					<aspectratio>keep</aspectratio>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
			</control>
			<!--video codec-->
			<control type="group" id="1">
				<width>82</width>
				<height>27</height>
				<control type="image" id="1">
					<width>82</width>
					<height>27</height>
					<texture>flags/base.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>3</left>
					<top>3</top>
					<width>65</width>
					<height>20</height>
					<texture fallback="flags/videocodec/default.png">$INFO[VideoPlayer.VideoCodec,flags/videocodec/,.png]</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>
			<!--audio codec-->
			<control type="group" id="1">
				<width>77</width>
				<height>27</height>
				<control type="image" id="1">
					<width>77</width>
					<height>27</height>
					<texture>flags/base 2.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>3</left>
					<top>3</top>
					<width>66</width>
					<height>20</height>
					<texture fallback="flags/audio/default.png">$INFO[VideoPlayer.AudioCodec,flags/audio/,.png]</texture>
					<aspectratio>keep</aspectratio>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
			</control>
			<!--audio channels-->
			<control type="group" id="1">
				<width>43</width>
				<height>27</height>
				<control type="image" id="1">
					<width>43</width>
					<height>27</height>
					<texture>flags/base.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>3</left>
					<top>3</top>
					<width>37</width>
					<height>20</height>
					<texture fallback="flags/audio/default channel.png">$INFO[VideoPlayer.AudioChannels,flags/audio/,.png]</texture>
					<aspectratio>keep</aspectratio>
				</control>
			</control>
			<!--audio language-->
			<control type="group" id="1">
				<width>78</width>
				<height>27</height>
				<visible>!String.IsEmpty(VideoPlayer.AudioLanguage)</visible>
				<control type="image" id="1">
					<visible>!String.IsEmpty(VideoPlayer.SubtitlesLanguage)</visible>
					<width>78</width>
					<height>27</height>
					<texture>flags/base 2.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<visible>String.IsEmpty(VideoPlayer.SubtitlesLanguage)</visible>
					<width>78</width>
					<height>27</height>
					<texture flipx="true">flags/base 3.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>5</left>
					<top>4</top>
					<width>20</width>
					<height>20</height>
					<texture>OSDAudioNF.png</texture>
					<aspectratio>keep</aspectratio>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="label" id="1">
					<left>26</left>
					<top>-3</top>
					<width>49</width>
					<height>20</height>
					<align>center</align>
					<label>$INFO[VideoPlayer.AudioLanguage]</label>
					<textcolor>$VAR[Colour.500]</textcolor>
					<font>secondary.info.small</font>
				</control>
			</control>
			<!--subtitle language (audio language visible)-->
			<control type="group" id="1">
				<width>78</width>
				<height>27</height>
				<visible>![String.IsEmpty(VideoPlayer.AudioLanguage) | String.IsEmpty(VideoPlayer.SubtitlesLanguage)]</visible>
				<control type="image" id="1">
					<width>78</width>
					<height>27</height>
					<texture>flags/base.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>5</left>
					<top>4</top>
					<width>20</width>
					<height>20</height>
					<texture>OSDSubtitlesNF.png</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label" id="1">
					<left>26</left>
					<top>-2</top>
					<width>49</width>
					<height>20</height>
					<align>center</align>
					<label>$INFO[VideoPlayer.SubtitlesLanguage]</label>
					<textcolor>white</textcolor>
					<font>secondary.info.small</font>
				</control>
			</control>
			<!--subtitle language (audio language not visible)-->
			<control type="group" id="1">
				<width>78</width>
				<height>27</height>
				<visible>String.IsEmpty(VideoPlayer.AudioLanguage) + !String.IsEmpty(VideoPlayer.SubtitlesLanguage)</visible>
				<control type="image" id="1">
					<width>78</width>
					<height>27</height>
					<texture flipx="true">flags/base 3.png</texture>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="image" id="1">
					<left>5</left>
					<top>4</top>
					<width>20</width>
					<height>20</height>
					<texture>OSDSubtitlesNF.png</texture>
					<aspectratio>keep</aspectratio>
					<colordiffuse>$VAR[Colour.500]</colordiffuse>
				</control>
				<control type="label" id="1">
					<left>26</left>
					<top>-2</top>
					<width>49</width>
					<height>20</height>
					<align>center</align>
					<label>$INFO[VideoPlayer.SubtitlesLanguage]</label>
					<textcolor>$VAR[Colour.500]</textcolor>
					<font>secondary.info.small</font>
				</control>
			</control>
			<!--recording image-->
			<control type="group" id="1">
				<width>48</width>
				<height>48</height>
				<visible>VideoPlayer.Content(LiveTV) + Player.Recording</visible>
				<control type="image" id="1">
					<top>-10</top>
					<width>48</width>
					<height>48</height>
					<texture colordiffuse="red">PVR-IsRecording.png</texture>
				</control>
			</control>
		</control>
	</include>
