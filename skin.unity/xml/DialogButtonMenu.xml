<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonMenu">
	<defaultcontrol>9000</defaultcontrol>
	<controls>
		<include>BehindDialogFadeOut</include>
		<!--all content-->
		<control type="group">
			<left>0r</left>
			<width>405</width>
			<include>SideBladeRight</include>
			<!--close window button-->
			<control type="button" id="20">
				<left>35</left>
				<top>0</top>
				<width>50</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<onleft>2</onleft>
				<onright>13</onright>
				<onup>13</onup>
				<ondown>2</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<!--title-->
			<control type="label">
				<left>40</left>
				<top>15</top>
				<width>355</width>
				<height>60</height>
				<font>menu.title</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>31064</label>
			</control>
			<control type="group">
				<top>100</top>
				<bottom>0</bottom>
				<!--buttons grouplist-->
				<control type="grouplist" id="9000">
					<left>40</left>
					<width>355</width>
					<height>100%</height>
					<onleft>9000</onleft>
					<onright>9000</onright>
					<onup>9000</onup>
					<ondown>9000</ondown>
					<itemgap>0</itemgap>
					<align>left</align>
					<control type="button" id="2">
						<description>Exit button</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.Quit()</onclick>
						<visible>System.ShowExitButton</visible>
						<label>13012</label>
						<align>center</align>
					</control>
					<control type="button" id="3">
						<description>Shutdown button</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.Powerdown()</onclick>
						<visible>System.CanPowerDown</visible>
						<label>13016</label>
						<align>center</align>
					</control>
					<control type="button" id="4">
						<description>Custom Shutdown Timer</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
						<label>20150</label>
						<visible>!System.HasAlarm(shutdowntimer)</visible>
						<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
						<align>center</align>
					</control>
					<control type="button" id="5">
						<description>Cancel Shutdown Timer</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
						<label>20151</label>
						<visible>System.HasAlarm(shutdowntimer)</visible>
						<align>center</align>
					</control>
					<control type="button" id="6">
						<description>Suspend button</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.Suspend()</onclick>
						<visible>System.CanSuspend</visible>
						<label>13011</label>
						<align>center</align>
					</control>
					<control type="button" id="7">
						<description>Hibernate button</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.Hibernate()</onclick>
						<visible>System.CanHibernate</visible>
						<label>13010</label>
						<align>center</align>
					</control>
					<control type="button" id="8">
						<description>Reboot button</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.Reset()</onclick>
						<visible>System.CanReboot</visible>
						<label>13013</label>
						<align>center</align>
					</control>
					<control type="button" id="9">
						<description>Logoff button</description>
						<include>ButtonCommonValues</include>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>System.LogOff</onclick>
						<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
						<visible>System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)</visible>
						<visible>System.Loggedon</visible>
						<align>center</align>
					</control>
					<control type="togglebutton" id="10">
						<description>Master mode button</description>
						<include>ButtonCommonValues</include>
						<usealttexture>!System.IsMaster</usealttexture>
						<onclick>xbmc.mastermode</onclick>
						<label>$LOCALIZE[20046]</label>
						<altlabel>$LOCALIZE[20045]</altlabel>
						<visible>System.HasLocks</visible>
						<align>center</align>
					</control>
					<!--settings-->
					<control type="button" id="14">
						<include>ButtonCommonValues</include>
						<label>21417</label>
						<onclick>ActivateWindow(Settings)</onclick>
						<align>center</align>
					</control>
					<control type="group" id="11">
						<width>510</width>
						<height>105</height>
						<visible>System.HasAlarm(shutdowntimer)</visible>
						<!--alarm background-->
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>355</width>
							<height>110</height>
							<texture background="true" colordiffuse="$VAR[Colour.900]">backgrounds/white.png</texture>
						</control>
						<control type="textbox">
							<left>0</left>
							<top>10</top>
							<width>355</width>
							<height>90</height>
							<font>label</font>
							<textcolor>white</textcolor>
							<align>center</align>
							<aligny>center</aligny>
							<label>$LOCALIZE[31329] [B]$INFO[System.Alarmpos][/B]</label>
						</control>
					</control>
					<control type="button" id="12">
						<description>Inhibit idle shutdown</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.InhibitIdleShutdown(true)</onclick>
						<label>13017</label>
						<visible>System.HasShutdown +!System.IsInhibit</visible>
						<align>center</align>
					</control>
					<control type="button" id="13">
						<description>Allow idle shutdown</description>
						<include>ButtonCommonValues</include>
						<onclick>XBMC.InhibitIdleShutdown(false)</onclick>
						<visible>System.HasShutdown + System.IsInhibit</visible>
						<align>center</align>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>