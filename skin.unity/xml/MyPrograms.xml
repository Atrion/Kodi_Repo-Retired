		<include>BehindDialogFadeOut</include>
		<control type="group">
			<left>-375</left>
			<include>SideBladeLeft</include>
			<control type="group">
				<top>100</top>
				<bottom>0</bottom>
				<control type="grouplist" id="9000">
					<left>10</left>
					<width>375</width>
					<height>100%</height>
					<onleft>9000</onleft>
					<onright>50</onright>
					<onup>9000</onup>
					<ondown>9000</ondown>
