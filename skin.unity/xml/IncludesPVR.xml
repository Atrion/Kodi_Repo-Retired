			<description>Empty so we can pass the values up one level</description>
			<visible>False</visible>
		</control>
		<!--breadcrumbs-->
		<include content="DynamicLeftBreadcrumb">
			<param name="breadcrumb1-label" value="$VAR[PVRBreadcrumb1]" />
