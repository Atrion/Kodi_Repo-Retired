						<left>0</left>
						<top>0</top>
						<width>1035</width>
						<height>145</height>
						<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
						<animation effect="fade" start="100" end="50" time="200" condition="!Control.HasFocus(52)">Conditional</animation>
					</control>
					<control type="image">
						<left>15</left>
