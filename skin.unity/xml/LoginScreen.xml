<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	<controls>
		<include>CommonBackground</include>
		<include>Clock</include>
		<control type="image">
			<description>LOGO</description>
			<left>0</left>
