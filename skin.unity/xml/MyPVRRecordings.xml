					<left>0</left>
					<top>21</top>
					<width>510</width>
					<height>287</height>
					<aspectratio>keep</aspectratio>
					<texture background="true" colordiffuse="$VAR[Colour.500]">$INFO[Container(50).ListItem.Icon]</texture>
