					<left>15</left>
					<top>374</top>
					<width>480</width>
					<height>268</height>
					<font>label</font>
					<align>left</align>
					<textcolor>text.primary</textcolor>
					<label>$INFO[Container(50).ListItem.Plot]</label>
					<autoscroll time="2000" delay="5000" repeat="8000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
