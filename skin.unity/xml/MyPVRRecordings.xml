							<left>1095</left>
							<top>10</top>
							<width>45</width>
							<height>40</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>keep</aspectratio>
							<visible>!ListItem.IsResumable</visible>
						</control>
						<control type="image">
							<left>1095</left>
							<top>10</top>
							<width>45</width>
							<height>40</height>
							<texture>OverlayWatching.png</texture>
							<visible>ListItem.IsResumable</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="1144">
					<!--focused bg-->
					<control type="image">
						<left>4</left>
						<top>5</top>
						<width>1140</width>
						<height>60</height>
						<texture colordiffuse="tertiary">backgrounds/white.png</texture>
						<animation effect="fade" start="100" end="75" time="200" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<!--focused bg nib-->
					<control type="image">
						<left>0</left>
						<top>5</top>
						<width>4</width>
						<height>60</height>
						<texture colordiffuse="$VAR[Colour.500]">backgrounds/white.png</texture>
						<animation effect="fade" start="100" end="75" time="200" condition="!Control.HasFocus(50)">Conditional</animation>
					</control>
					<control type="group">
						<left>4</left>
						<top>5</top>
						<control type="image">
							<left>15</left>
							<top>8</top>
							<width>45</width>
							<height>45</height>
							<texture background="true" fallback="DefaultVideoCover.png" colordiffuse="$VAR[Colour.500]">$INFO[ListItem.Icon]</texture>
