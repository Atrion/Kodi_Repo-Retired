							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>800</left>
							<top>0</top>
							<width>285</width>
							<height>60</height>
							<font>label</font>
							<textcolor>white</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<align>right</align>
