							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>800</left>
							<top>0</top>
							<width>285</width>
							<height>60</height>
							<font>label</font>
							<textcolor>text.primary</textcolor>
							<selectedcolor>$VAR[Colour.500]</selectedcolor>
							<align>right</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Date]</label>
						</control>
						<control type="image">
							<left>1095</left>
							<top>10</top>
							<width>45</width>
							<height>40</height>
							<texture colordiffuse="$VAR[Colour.500]">$INFO[ListItem.Overlay]</texture>
							<aspectratio>keep</aspectratio>
							<visible>!ListItem.IsResumable</visible>
						</control>
						<control type="image">
							<left>1095</left>
							<top>10</top>
							<width>45</width>
							<height>40</height>
							<texture colordiffuse="$VAR[Colour.500]">OverlayWatching.png</texture>
							<visible>ListItem.IsResumable</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<!--scrollbar-->
			<control type="scrollbar" id="72">
				<left>1154</left>
				<top>5</top>
				<bottom>5</bottom>
				<onleft>50</onleft>
				<onright>102</onright>
				<orientation>vertical</orientation>
			</control>
			<!--recording info-->
			<control type="group">
				<left>1171</left>
				<centertop>50%</centertop>
				<height>730</height>
